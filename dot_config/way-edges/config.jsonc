        //   "preset": {
        //     "update-interval": 500,
        //     "type": "swap"
        //   }
        // },
        {
          "radius": 20,
          "ring-width": 8,
          "font-size": 40,
          "font-family": "0xProto Nerd Font",
          "bg-color": "#00000050",
          "fg-color": "#08A86850",
          "type": "ring",
          "prefix": "  ",
          "suffix": "",
          "prefix-hide": false,
          "suffix-hide": true,
          "preset": {
            "update-interval": 500,
            "type": "ram"
          }
        },
        {
          "radius": 20,
          "ring-width": 8,
          "font-size": 40,
          "font-family": "0xProto Nerd Font",
          "bg-color": "#00000050",
          "fg-color": "#E5741550",
          "type": "ring",
          "prefix": "󰾲  ",
          "suffix": "",
          "prefix-hide": false,
          "suffix-hide": true,
          "preset": {
            "update-interval": 1000,
            "cmd": "amdgpu_top --json --single-gpu -n 1 | jq -r '.devices[0].gpu_activity.GFX.value' | awk '{printf \"%.2f\", $1 / 100}'",
            "type": "custom"
          }
        }
      ]
    },
  
  ]
}

